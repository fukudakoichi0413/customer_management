<p id="notice"><%= notice %></p>

<h1>Customers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Birthday</th>
      <th>Postcode</th>
      <th>Address pref</th>
      <th>Address others</th>
      <th>Phone 1</th>
      <th>Phone 2</th>
      <th>Mail 1</th>
      <th>Mail 2</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.name %></td>
        <td><%= customer.birthday %></td>
        <td><%= customer.postcode %></td>
        <td><%= customer.address_pref %></td>
        <td><%= customer.address_others %></td>
        <td><%= customer.phone_1 %></td>
        <td><%= customer.phone_2 %></td>
        <td><%= customer.mail_1 %></td>
        <td><%= customer.mail_2 %></td>
        <td><%= link_to 'Show', customer %></td>
        <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
        <td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

